# MANIFEST.in - Include additional files in source distribution

# Documentation
include README.md
include LICENSE
include NOTICE
include LICENSE_INFO.md
include CHANGELOG.md
include CONTRIBUTING.md
include CLAUDE.md
include IMPLEMENTATION_SUMMARY.md

# Configuration files
include pyproject.toml
include setup.py
include requirements.txt
include pytest.ini
include .editorconfig
include .flake8

# Example files
include example_usage.py

# Type checking markers
include engine/py.typed
include env/py.typed

# Exclude compiled and cache files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

# Exclude test and development files from distribution
prune .git
prune .github
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
